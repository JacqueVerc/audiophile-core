    <div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
        <span class="close">&times;</span>
        <p>Texte dans la modal..</p>
        <a href="#">GO GO GO</a>
    </div>
    </div>

</main>
{% endblock %}
