{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<main class="login">
    <section class="login-container container">
        <h1 class="login-title">Please Login</h1>
        <form method="post" class="login-form">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                {# {% do redirect('/profile') %} #}
            {% endif %}

            <div class="login-form-input">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="login-form-input">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="login-form-checkbox">
                <label for="remember">Remember me</label>
                <input type="checkbox" id="remember" name="_remember_me"> 
            </div>

            <button class="btn btn-orange" type="submit">
                Sign in
            </button>
        </form>
        <p class="login-toSignin">
          If you don't have an account, <a href="/register">sign in</a>
        </p>
    </section>
    
     {# Juste test meilleur impl√©mentation dans le futur #}
